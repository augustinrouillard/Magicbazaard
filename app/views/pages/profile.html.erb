<div class="container">
  <div class="d-flex flex-row">
    <div class="col-sm-6">
      <h1>Profil</h1>
      <p>Nom: <%= @user1.name %> </p>
      <p>Adresse: <%= @user1.address %></p>
      <p>N° Téléphone: <%= @user1.phone_number %></p>
      <p>Email: <%= @user1.email %></p>
      <p>Note: <%= @user1.rating %>/5</p>
      <h3>Commentaires</h3>
      <ul><% @comments.each do |comment| %>
        <li><%= comment.content %> <br> Note: <%= comment.rating %><%=  link_to "Effacer", comment_path(comment),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-danger p-1 m-2"%>
          </li>
      <% end %>
      </ul>
    </div>
    <div class="col-sm-6">
      <% if current_user != @user1 %>
        <div class="mt-5 form-control me-5">
          <h3>Ajouter un nouveau commentaire</h3>
          <%= simple_form_for ([@user1, Comment.new(target: @user1)]) do |f| %>
            <%= f.input :content %>
            <%= f.input :rating %>
            <%= f.submit %>
          <% end %>
        </div>
      <% else %>
        <p>Vous ne pouvez pas commenter votre propre profil.</p>
      <% end %>
    </div>
  </div>
</div>
