<div>
  <p>Name: <%= @user.name %> </p><br>
  <p>Adress: <%= @user.address %></p><br>
  <p>Phone Number: <%= @user.phone_number %></p><br>
  <p>Email: <%= @user.email %></p><br>
  <h3>Comments</h3>
  <ul><% @comments.each do |comment| %>
    <li><%= comment.content %><%=  link_to "Delete", comment_path(comment),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
      </li>
  <% end %>
  </ul><br>
  <%= simple_form_for ([@user, Comment.new(target: @user)]) do |f| %>
    <%= f.input :content %>
    <%= f.submit %>
  <% end %>
</div>
