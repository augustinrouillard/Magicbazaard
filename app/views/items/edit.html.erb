<%= simple_form_for(@item) do |f| %>
  <%= f.input :name %>
  <%= f.input :price %>
  <%= f.input :description %>
  <%= f.select :power, Item::POWER %>
  <%= f.select :category, Item::CATEGORY %>
  <%= f.submit %>
<% end %>

<%= link_to 'Back to item', item_path(@item), class: "btn btn-secondary" %>
