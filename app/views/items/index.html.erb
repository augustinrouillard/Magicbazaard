<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <%= link_to "Add New Item", new_item_path, class: "btn btn-secondary" %>
    <%= link_to "Dashboard", dashboards_path, class: "btn btn-warning" %>
  </div>

  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
    <% @items.each do |item| %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <% if item.image.attached? %>
            <%= cl_image_tag item.image.key, height: 200, width: 1000, crop: :fill, class: "card-img-top" %>
          <% end %>

          <div class="card-body d-flex flex-column">
            <h5 class="card-title">
              <%= link_to item.name, item_path(item), class: "text-decoration-none" %>
            </h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
