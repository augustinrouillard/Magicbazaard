<%= simple_form_for(@item) do |f| %>
  <%= f.input :name %>
  <%= f.input :price %>
  <%= f.input :description %>
  <%= f.select :power, Item::POWER %>
  <%= f.select :category, Item::CATEGORY %>
  <%= f.input :image, as: :file, label: "Image of item" %>
  <%= f.submit %>
<% end %>

<%= link_to "Back to Items", items_path, class: "btn btn-secondary" %>
