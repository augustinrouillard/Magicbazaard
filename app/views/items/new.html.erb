<div class="booking">
  <h2 class="form-title">Ajouter un objet magique</h2>

  <%= simple_form_for(@item, html: { multipart: true, class: "magic-form" }) do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.input_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :price %>
      <%= f.input_field :price, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.input_field :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :long_description %>
      <%= f.text_area :long_description, class: "form-control", rows: 4 %>
    </div>

    <div class="form-group">
      <%= f.label :power, "Niveau de l'objet" %>
      <%= f.select :power, Item::POWER, {}, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :category, "Catégorie de l'objet" %>
      <%= f.select :category, Item::CATEGORY, {}, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :image, "Image de l'objet" %>
      <%= f.file_field :image, class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "✨ Enregistrer l'objet", class: "btn-submit" %>
    </div>
  <% end %>

  <div class="form-actions">
    <%= link_to "⬅ Retour aux objets", items_path, class: "btn-link" %>
  </div>
</div>
