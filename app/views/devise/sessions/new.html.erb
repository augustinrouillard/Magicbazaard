<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
  <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px;">
    <h2 class="text-center mb-4" style="color: #6f42c1;">Se connecter</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.label :email, "Adresse email", class: "form-label" %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "Mot de passe", class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, "Se souvenir de moi", class: "form-check-label" %>
        </div>
      <% end %>

      <div class="d-grid gap-2">
        <%= f.submit "Se connecter", class: "btn btn-primary", style: "background-color: #6f42c1; border-color: #6f42c1;" %>
      </div>
    <% end %>

    <hr>

    <div class="text-center">
      <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: "text-decoration-none d-block mb-2" %>
      <%= link_to "Créer un compte", new_registration_path(resource_name), class: "text-decoration-none" %>
    </div>
  </div>
</div>
