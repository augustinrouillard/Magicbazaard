<h1>Reservation#new</h1>
<div class="container">
  <h2>Réserver l'item : <%= @item.name %></h2>
  <%= simple_form_for [@item, @reservation] do |f| %>
    <%= f.input :starting_date,
                as: :string,
                input_html: { data: { controller: "datepicker" } } %>
    <%= f.input :ending_date,
                as: :string,
                input_html: { data: { controller: "datepicker" } } %>
    <%= f.hidden_field :item_id, value: @item.id %>
    <%= f.submit "Réserver" %>
  <% end %>
  <%= link_to 'Back to items', items_path %>
  <%= link_to 'Dashboard', dashboards_path %>
</div>
