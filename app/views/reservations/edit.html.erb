<div class="booking">
  <h2>Modifier la réservation de : <%= @item.name %></h2>
  <%= simple_form_for [@reservation] do |f| %>
    <%= f.input :starting_date,
                as: :string,
                input_html: { data: { controller: "datepicker" } } %>
    <%= f.input :ending_date,
                as: :string,
                input_html: { data: { controller: "datepicker" } } %>
    <%= f.hidden_field :item_id, value: @item.id %>
    <%= f.submit "Modifier la réservation", class: "btn btn-primary" %>
  <% end %>
</div>
